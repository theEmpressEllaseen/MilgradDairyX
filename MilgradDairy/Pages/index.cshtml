@page
@{
    ViewBag.Title = "Milgrad Dairy | home";
}

<div class="main-photo">
  <img src="assets/milk-strawberries.jpeg" alt="A glass of milk with cookies and strawberries">
</div>

<div class="milk-banner">
  <img src="assets/milk-left.jpeg" alt="Our milk cartons">
  <a href="milk.html" class="submit-button">buy milk</a>
  <img src="assets/milk-right.jpeg" alt="Our milk cartons">
</div>

<div class="product-flex-container">
  <div id="order-1">
    <a href="yoghurt.html" class="product-flex-image">
      <img src="assets/yoghurt.png" alt="A tub of strawberry yoghurt">
    </a>
    <div class="product-flex-text left-text">
      <a href="yoghurt.html">yoghurt</a>
      <p>strawberry</p>
    </div>
  </div>

  <div id="order-3">
    <a href="snack-bar.html" class="product-flex-image">
      <img src="assets/snack-bar.png" alt="A coconut snack bar">
    </a>
    <div class="product-flex-text left-text">
      <a href="snack-bar.html">snack bar</a>
      <p>coconut</p>
    </div>
  </div>

  <div id="order-2">
    <div class="product-flex-text right-text">
      <a href="butter.html">butter</a>
      <p>salted</p>
    </div>
    <a href="butter.html" class="product-flex-image">
      <img src="assets/butter.png" alt="A pack of salted butter">
    </a>
  </div>

  <div id="order-4">
    <div class="product-flex-text right-text">
      <a href="kefir.html">kefir</a>
      <p>3.2% fat</p>
    </div>
    <a href="kefir.html" class="product-flex-image">
      <img src="assets/kefir.png" alt="A carton of kefir">
    </a>
  </div>
</div>

<div class="all-products">
  <img src="assets/all-products.png" alt="Our product range">
  <a href="all.html" class="submit-button">see all products</a>
</div>

<div class="wallpaper">
  <img src="assets/wallpaper.jpeg" alt="Cartoon cats">
  <p>we've created a new approach towards dairy - tasty products made from all-natural ingredients, served in packaging that's guaranteed to make you smile :)</p>
</div>